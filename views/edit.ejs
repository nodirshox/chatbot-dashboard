<%- include('includes/header') %>
<div class="banner"><h2><a href="/">Bosh sahifa</a><i class="fa fa-angle-right"></i><span>Mahsulotni o'zgartirish</span></h2></div>

<div class="blank">
    <div class="blank-page">        
    <a href="/item/<%= product._id %>" class="btn-default btn">Tovarga qaytish</a><br />
    <form action="/edit/<%= product._id %>" method="POST">
        <div class="form-group">
            <label>Mahsulot nomi</label>
            <input type="text" name="name" class="form-control" value="<%= product.name %>" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label>Mahsulot haqida</label>
            <input type="text" name="description" class="form-control" value="<%= product.description %>" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label>Narxi</label>
            <input type="number" name="price" class="form-control" value="<%= product.price %>" autocomplete="off" min="1" required>
        </div>
        <div class="form-group">
            <label>Tovar uchun rasm havola</label>
            <input type="text" name="picture" class="form-control" value="<%= product.picture %>" autocomplete="off" required>
        </div>
        <button type="submit" class="btn btn-success">SAQLASH</button>
    </form>
</div>
</div>


<%- include('includes/footer') %>